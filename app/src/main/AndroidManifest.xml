<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cmim.hdpf.myopengles">
    <!-- Tell the system this app requires OpenGL ES 3.1. -->
    <uses-feature
        android:glEsVersion="0x00030001"
        android:required="true" /> <!-- 声明应用支持的 GL 纹理压缩格式 -->
    <supports-gl-texture android:name="GL_OES_compressed_ETC1_RGB8_texture" />
    <supports-gl-texture android:name="GL_OES_compressed_paletted_texture" />
    <supports-gl-texture android:name="GL_AMD_compressed_3DC_texture" />
    <supports-gl-texture android:name="GL_AMD_compressed_ATC_texture" />
    <supports-gl-texture android:name="GL_EXT_texture_compression_latc" />
    <supports-gl-texture android:name="GL_EXT_texture_compression_dxt1" />
    <supports-gl-texture android:name="GL_EXT_texture_compression_s3tc" />
    <supports-gl-texture android:name="GL_IMG_texture_compression_pvrtc" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyOpenGLES">
        <activity android:name=".LottieActivity">
<!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.MAIN" />-->

<!--                <category android:name="android.intent.category.LAUNCHER" />-->
<!--            </intent-filter>-->
        </activity>
        <activity android:name=".AirHockeyActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>